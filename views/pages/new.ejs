<div>
    <p>Search by Title or Author</p>
</div>
<form action="/searches" method="post">
    <input class="submitBox" type="text" name="search" placeholder="Enter a title or author" required>
    <fieldset>
    <label for="title">
        <span>Title</span>
        <input class="Title" type="radio" name="search" value="title" required>
    </label>
    </fieldset>
    <fieldset>
    <label for="author">
        <span>Author</span>
        <input class="Author" type="radio" name="search" value="author" required>
    </label>
    </fieldset>
    <button type="submit">Search the Google Books API</button>
</form>